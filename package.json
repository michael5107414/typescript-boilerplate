{
  "name": "typescript-boilerplate",
  "version": "1.0.0",
  "author": "Michael Chien",
  "license": "UNLICENSED",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "engines": {
    "node": "^18.18 || ^20.9 || >=21.1"
  },
  "packageManager": "yarn@4.3.1",
  "scripts": {
    "prepare": "husky",
    "build": "tsc",
    "build:release": "yarn clean && tsc -p tsconfig.release.json",
    "dev": "yarn build && node dist/index.js",
    "clean": "rimraf dist coverage",
    "lint:eslint": "eslint --cache",
    "lint:prettier": "prettier --check .",
    "lint:tsc": "tsc --noEmit",
    "lint": "concurrently -s all \"yarn:lint:*(!clear)\"",
    "lint:clear": "rimraf .eslintcache",
    "fix:eslint": "eslint --cache --fix",
    "fix:prettier": "prettier --write .",
    "fix": "yarn fix:eslint && yarn fix:prettier",
    "test": "jest --config=jest.config.mjs",
    "coverage": "jest --coverage --config=jest.config.mjs"
  },
  "devDependencies": {
    "@babel/core": "^7.25.2",
    "@babel/plugin-proposal-explicit-resource-management": "^7.24.7",
    "@babel/preset-env": "^7.25.3",
    "@babel/preset-typescript": "^7.24.7",
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "^19.2.2",
    "@eslint/compat": "^1.1.1",
    "@eslint/js": "^9.8.0",
    "@stylistic/eslint-plugin-js": "^2.6.1",
    "@types/eslint__js": "^8.42.3",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.14.14",
    "concurrently": "^8.2.2",
    "eslint": "^9.8.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "eslint-plugin-sort-class-members": "^1.20.0",
    "husky": "^9.1.4",
    "jest": "30.0.0-alpha.5",
    "prettier": "^3.3.3",
    "rimraf": "6.0.0",
    "typescript": "^5.5.4",
    "typescript-eslint": "^8.0.0"
  },
  "resolutions": {
    "glob": "^10.0.0"
  }
}
